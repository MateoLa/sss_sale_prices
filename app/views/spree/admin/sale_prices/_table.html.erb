<table class="table table-striped" id="product_sale_prices" data-hook="sale_price_table">
  <thead>
    <tr data-hook="products_header">
      <th><%= Spree.t('sale_price_active') %></th>
      <th><%= Spree.t('sale_price') %></th>
      <th style="width: 30%"><%= Spree.t('sale_price_start_at') %></th>
      <th style="width: 30%"><%= Spree.t('sale_price_end_at') %></th>
      <th><%= Spree.t('sale_price_enabled') %></th>
      <th class="actions"></th>
    </tr>
  </thead>      
  <tbody>
    <%= render partial: "sale_price", collection: product.master.sale_prices, locals: {product: product} %>
  </tbody>
</table>